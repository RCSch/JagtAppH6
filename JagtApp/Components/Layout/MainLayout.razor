@inherits LayoutComponentBase

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <div class="page">
                <div class="sidebar">
                    <NavMenu />
                </div>
                <div class="main">
                    @Body
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="page">
                <div class="sidebar">
                    <NavMenu />
                </div>
                <div class="main">
                    @Body
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
